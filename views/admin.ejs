<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>无标题文档</title>
    <link rel='stylesheet' href='/stylesheets/reset.css'/>
    <link rel="stylesheet" href="./themes/jquery-ui.min.css">
    <script src="./javascripts/check_file.js"></script>
    <script src="./javascripts/jquery-1.9.1.js"></script>
    <script src="./javascripts/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("#resetStateName")
                    .button()
                    .on("click",function(){
                        $.ajax({
                            method: "POST",
                            url: "../resetStateName",
                            success: function (msg) {
                                if (msg.success == true) {
                                    $("#pInfo").text(msg.data);
                                }
                                else {
                                    $("#pInfo").text("导入失败!!!" + msg.data);
                                }
                            },
                            error: function (xmlHttpRequest, error) {
                                alert(error.toString());
                                $('#pInfo').text("导入失败！！！" + error.toString());
                            }
                        })
                    });
            $("#resetDB")
                    .button()
                    .on("click",function(){
                        $.ajax({
                            method: "POST",
                            url: "../resetDB",
                            success: function (msg) {
                                if (msg.success == true) {
                                    $("#pInfo").text(msg.data);
                                }
                                else {
                                    $("#pInfo").text("重置数据库失败!!!" + msg.data);
                                }
                            },
                            error: function (xmlHttpRequest, error) {
                                alert(error.toString());
                                $('#pInfo').text("重置数据库失败！！！" + error.toString());
                            }
                        })
                    });
        });
    </script>
    <style>
        textarea {
            width: 80%;
            height: 500px;
            margin: 5%;
            padding: 5%;
        }
    </style>
</head>
<body style="padding: 20px;">
    <button id="resetStateName" >重新导入俄罗斯州</button>
    <button id="resetDB" style="margin-left: 20px" >重置数据库</button>
    <p id="pInfo"></p>
</body>
</html>

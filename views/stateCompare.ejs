<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>无标题文档</title>
    <link rel='stylesheet' href='/stylesheets/reset.css'/>
    <link rel="stylesheet" href="./themes/jquery-ui.min.css">
    <script src="./javascripts/check_file.js"></script>
    <script src="./javascripts/jquery-1.9.1.js"></script>
    <script src="./javascripts/jquery-ui.min.js"></script>
    <script>
        $(function () {
            $("button").button() ;
            $("#toCompare").on("click",function(){
                $.ajax({
                    method: "POST",
                    url: "./stateCompare",
                    data: {
                        textIn: $("#textIn").val()
                    },
                    success: function (msg) {
                        if (msg.success == true) {
                            $("#textOut").val(msg.data);
                            $("#pInfo").text("比对完成!!!");
                        }
                        else {
                            $("#pInfo").text("比对失败!!!" + msg.data);
                        }
                    },
                    error: function (xmlHttpRequest, error) {
                        alert(error.toString());
                        $('#pInfo').text("比对失败！！！" + error.toString());
                    }
                })
            });
        });
    </script>
    <style>
        textarea {
            width: 80%;
            height: 500px;
            margin: 5%;
            padding: 5%;
        }
    </style>
</head>
<body style="padding: 0px;width: 100%">
<hr width="50%">
<hr width="50%">
<div style="width: 45%;float: left"><textarea id="textIn"></textarea></div>
<div style="width: 10%;float: left;text-align: center">
    <button id="toCompare" style="margin-top: 250px">比对>></button>
    <p id="pInfo"></p></div>
<div style="width: 45%;float: left"><textarea id="textOut"></textarea></div>
</body>
</html>
